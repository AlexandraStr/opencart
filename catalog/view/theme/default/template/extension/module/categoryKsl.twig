<div class="list-group">
  {% for category in categories %}
  {% if category.category_id == category_id %} 
    <a href="{{ category.href }}" class="list-group-item active"><img src="{{ category.image }}" alt="{ category.name }}"  /><span class="img-cat-name cat-name">{{ category.name }}</span></a>
  {% if category.children %}
  {% for child in category.children %}
  {% if child.category_id == child_id %}
  <a href="{{ child.href }}" class="list-group-item active">&nbsp;&nbsp;&nbsp;- {{ child.name }}</a> 
  {% else %} 
  <a href="{{ child.href }}" class="list-group-item">&nbsp;&nbsp;&nbsp;- {{ child.name }}</a>
  {% endif %}
  {% endfor %}
  {% endif %}
  {% else %} <a href="{{ category.href }}" class="list-group-item"><img src="{{ category.image }}" alt="{ category.name }}"  /><span class="img-cat-name cat-name">{{ category.name }}</span></a>
  {% endif %}
  {% endfor %}
</div>
