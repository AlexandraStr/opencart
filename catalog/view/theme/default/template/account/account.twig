{{ header }}
<div id="account-account" class="container">
  <style>
    .hvr:hover > h5{
      color: #84C225;
    }
  </style>
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
  {% if success %}
  <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}</div>
  {% endif %}
  <div class="row">{{ column_left }}
    {% if column_left and column_right %}
    {% set class = 'col-sm-6' %}
    {% elseif column_left or column_right %}
    {% set class = 'col-sm-9' %}
    {% else %}
    {% set class = 'col-sm-12' %}
    {% endif %}
    <div id="content" class="{{ class }}">{{ content_top }}
      <h3>{{ text_my_account }}</h3>
      <ul class="list-unstyled">
        <div class="col-md-3 text-center" >
          <a class="hvr" href="{{ edit }}">
            <img src="catalog/view/theme/default/image/account-images/edit.png" alt="Account Details" >
            <h5>{{ text_edit }}</h5>
          </a>
        </div>
        <div class="col-md-3 text-center" >
          <a class="hvr" href="{{ password }}">
            <img src="catalog/view/theme/default/image/account-images/password.png" alt="Account Password" >
            <h5>{{ text_password }}</h5>
          </a>
        </div>
        <div class="col-md-3 text-center">
          <a class="hvr" href="{{ address }}">
            <img src="catalog/view/theme/default/image/account-images/address.png" alt="Address Book" >
            <h5>{{ text_address }}</h5>
          </a>
        </div>
        <div class="col-md-3 text-center">
          <a class="hvr" href="{{ wishlist }}">
            <img src="catalog/view/theme/default/image/account-images/wishlist.png" alt="Wish List" >
            <h5>{{text_wishlist}}</h5>
          </a>
        </div><div class="clearfix"></div>
      </ul>
      {% if credit_cards %}
      <h3>{{ text_credit_card }}</h3>
      <ul class="list-unstyled">
        {% for credit_card in credit_cards %}
          <div class="col-md-3 text-center" >
            <a class="hvr" href="{{ credit_card.href }}">
              <img src="catalog/view/theme/default/image/account-images/creditcart.png" alt="Order History" >
              <h5>{{ credit_card.name }}</h5>
            </a>
          </div>
        <li><a href="{{ credit_card.href }}">{{ credit_card.name }}</a></li>
        {% endfor %}
      </ul>
      {% endif %}
      <h3>{{ text_my_orders }}</h3>
      <ul class="list-unstyled">
          <div class="col-md-3 text-center" >
            <a class="hvr" href="{{ order }}">
              <img src="catalog/view/theme/default/image/account-images/orders.png" alt="Order History" >
              <h5>{{ text_order }}</h5>
            </a>
          </div>
          <div class="col-md-3 text-center" >
            <a class="hvr" href="{{ download }}">
              <img src="catalog/view/theme/default/image/account-images/download.png" alt="Your Downloads" >
              <h5>{{ text_download }}</h5>
            </a>
          </div>
        </ul>
        {% if reward %}
          <div class="col-md-3 text-center" >
            <a class="hvr" href="{{ reward }}">
              <img src="catalog/view/theme/default/image/account-images/reward.png" alt="Reward Points" >
              <h5>{{ text_reward }}</h5>
            </a>
          </div>
        {% endif %}
        <div class="col-md-3 text-center" >
          <a class="hvr" href="{{ return }}">
            <img src="catalog/view/theme/default/image/account-images/return.png" alt="Your Returns" >
            <h5>{{ text_return }}</h5>
          </a>
        </div>
     <!--   <div class="col-md-3 text-center" >
          <a class="hvr" href="{{ transaction }}">
            <img src="catalog/view/theme/default/image/account-images/trans.png" alt="Transactions" >
            <h5>{{ text_transaction }}</h5>
          </a>
        </div>  -->
     <div class="col-md-3 text-center" >
     <!--    <a class="hvr" href="{{ recurring }}">
            <img src="catalog/view/theme/default/image/account-images/payments.png" alt="Recurring Payments" >
            <h5>{{ text_recurring }}</h5>
          </a> -->
        </div> 
        <div class="clearfix"></div>
      </ul>
      <h3>{{ text_my_affiliate }}</h3>
      <ul class="list-unstyled">
        {% if not tracking %}
        <div class="col-md-3 text-center" >
          <a class="hvr" href="{{ affiliate }}">
            <img src="catalog/view/theme/default/image/account-images/contact1.png" alt="Recurring Payments" >
            <h5>{{ text_affiliate_add }}</h5>
          </a>
     </div>
        {% else %}
          <div class="col-md-3 text-center" >
            <a class="hvr" href="{{ affiliate }}">
              <img src="catalog/view/theme/default/image/account-images/contact1.png" alt="Recurring Payments" >
              <h5>{{ text_affiliate_add }}</h5>
            </a>
          </div>
          <div class="col-md-3 text-center" >
            <a class="hvr" href="{{ tracking }}">
              <img src="catalog/view/theme/default/image/account-images/order-history.png" alt="Recurring Payments" >
              <h5>{{ text_tracking }}</h5>
            </a>
          </div>
        {% endif %}
     </ul>

  <!--    <ul class="list-unstyled"> 
        <div class="col-md-3 text-right" >
          <h3>{{ text_my_newsletter }}</h3>
          <a class="hvr" href="{{ newsletter }}">
            <img src="catalog/view/theme/default/image/account-images/newsletter.png" alt="Your Newsletter" >
            <h5>{{ text_newsletter }}</h5>
          </a>
        </div>
      </ul>  -->
      {{ content_bottom }}</div>
    {{ column_right }}</div>
</div>
{{ footer }}